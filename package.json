{
  "name": "learning-git-2",
  "version": "1.0.0",
  "description": "https://dawid-zajac.github.io/learning-git-2/",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:html",
    "test:html": "globstar nu-html-checker *.html",
    "init-project": " npm install && npm-run-all init:* ",
    "init:dirs": "mkdirp sass css vendor images js",
    "init:fiels": "touch README.md index.html sass/style.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/gitignore/master/Node.gitignore -o .gitignore",
    "build": " npm-run-all build:*  test",
    "build:sass": "node-sass --output-style compact -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",

    "watch": "npm-run-all build -p watch:*",
  	"watch:sass": "node-sass --output-style expanded --source-map true -o css sass --watch",
  	"watch:autoprefixer": "onchange -d 100 css/style.css -- autoprefixer-cli -o css/style.prefixed.css css/style.css"
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/dawid-zajac/learning-git-2.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dawid-zajac/learning-git-2/issues"
  },
  "homepage": "https://github.com/dawid-zajac/learning-git-2#readme",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.26.3",
    "globstar": "^1.0.0",
    "node-sass": "^4.12.0",
    "nu-html-checker": "^0.1.0",
    "onchange": "^5.2.0"
  },
  "dependencies": {
    "save-dev": "^2.0.0"
  }
}
